		<PackageReference Include="CommunityToolkit.WinUI.Controls.Segmented" Version="8.0.230907" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
		<PackageReference Include="System.Drawing.Common" Version="6.0.0" />
	</ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\..\common\DevHome.Common.csproj" />
        <ProjectReference Include="..\..\..\logging\DevHome.Logging.csproj" />
        <ProjectReference Include="..\..\..\settings\DevHome.Settings\DevHome.Settings.csproj" />
    </ItemGroup>

  <ItemGroup>
    <Page Update="CustomControls\CardBody.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Converters\" />
    <Folder Include="CustomControls\" />
